<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#F0F0F0"
    android:padding="8dp"
    android:elevation="4dp">

    <ImageButton
        android:id="@+id/btnDropdownRectangle"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Hình chữ nhật"
        android:scaleType="centerInside"
        android:src="@android:drawable/ic_menu_crop"
        android:layout_marginBottom="4dp"
        app:tint="#000000" />

    <ImageButton
        android:id="@+id/btnDropdownCircle"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Hình tròn"
        android:scaleType="centerInside"
        android:src="@android:drawable/ic_menu_view"
        android:layout_marginBottom="4dp"
        app:tint="#000000" />

    <ImageButton
        android:id="@+id/btnDropdownLine"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Đường thẳng"
        android:scaleType="centerInside"
        android:src="@android:drawable/ic_menu_zoom"
        app:tint="#000000" />
</LinearLayout>